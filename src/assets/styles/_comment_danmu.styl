// --------------------------------------- .module_danmu_stage -----------------------------------------
.module_danmu_stage
  width 100%
  height calc(100% - 110px)
  .self_customization
    background-color rgba(255, 88, 80, .6)
    padding 3px 10px!important
    border-radius 3px
    box-shadow 1px 1px 4px #e06969
    border none!important

// --------------------------------------- .module_danmu_create -----------------------------------------
.is_showdanmu
  .el-switch
    height 22px!important
    line-height 22px!important
    width 42px!important
    .el-switch__core
      height 22px!important
      line-height 22px!important
      width 36px!important
      border-radius 12px
      backgroud-color #999
      &:after
        content '弹'
        font-size 12px
        width 18px
        line-height 18px
        height 18px
        color #666
  .is-checked
    .el-switch__core
      &::after
        margin-left -19px

// 弹幕样式设置
.el-tooltip__popper
  z-index 10001!important 
.danmu_style_seting_popover
  background rgba(0, 0, 0, .7)
  border rgba(0, 0, 0, .7)
  z-index 10000!important // 滚动弹幕的z-index为9999

.seting_popover
  .title
    padding-right 16px
    line-height 32px
    color #f8f8f8
    font-size 14px
  .set_item
    height 36px
    padding-top 10px
  .shield_by_type
    ul
      display flex
      flex-wrap wrap
      padding-left 12px
      li
        flex 0 0 30px
        height 49px
        margin-right 18px
        text-align center
        border 1px solid transparent
        border-radius 6px
        cursor pointer
        .el-icon-picture
          font-size 30px
          color #eee
        .desc
          font-size 12px
          color #eee
      .active
        border 1px solid #2196f3
  .shield_by_comment
    ul
      display flex
      flex-wrap wrap
      padding-left 12px
      li
        flex 0 0 120px
        margin-right 8px
        color #eee
        background rgba(120, 120, 120, 1)
        text-align center
        line-height 22px
        border-radius 2px
        font-size 12px
  .el-slider
    display inline-block
    width calc(100% - 94px)
    .el-slider__runway
      width 100%
      height 2px
      margin 3px 0
      background-color #bbb
      border-radius 2px
      .el-slider__bar
        height 2px
      .el-slider__button-wrapper
        height 18px
        width 18px
        z-index 1001
        top -10px
        .el-slider__button
          width 8px
          height 8px
          border none
          background-color #409EFF
      .el-slider__stop
        top -2px
      .el-slider__marks
        .el-slider__marks-text
          margin-top -22px
          width fit-content
          font-size 12px
  .set_more
    padding-top 16px
    .title
      cursor pointer
      &:hover
        color #2196f3
